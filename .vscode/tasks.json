{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Run Chess Server",
			"type": "shell",
			"command": "mvn",
			"args": [
				"-f",
				"chess-server/pom.xml",
				"exec:java",
				"-Dexec.mainClass=chess.server.ChessServerMain",
				"-Dexec.args=8080"
			],
			"group": "build",
			"isBackground": true,
			"problemMatcher": []
		},
		{
			"label": "Run Chess Client Updated",
			"type": "shell",
			"command": "mvn",
			"args": [
				"-f",
				"chess-client/pom.xml",
				"exec:java",
				"-Dexec.mainClass=chess.ChessClient",
				"-Dexec.args=ws://localhost:8080"
			],
			"group": "build",
			"isBackground": false,
			"problemMatcher": []
		}
	]
}